{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">

        {% for category in categories %}

            <div class="col-md-4 mb-5">
                <div class="card h-100 text-center">
                    <img class="card-img-top" src="http://lorempixel.com/300/200?cb={{ category.id }}" alt="">
                    <div class="card-body">
                        <h4 class="card-title">{{ category.name }}</h4>
                        <p>{{ category.description }}</p>
                    </div>
                    <div class="card-footer">
                        <a href="{{ url('category_show', {'slug': category.slug})}}" class="btn btn-primary">Zobacz og≈Çoszenia z tej kategorii </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
